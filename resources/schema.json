{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Isotype",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Titel bringt die Kernaussage der Grafik auf den Punkt&#46;"
      }
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Untertitel benennt pr√§zise, was in der Grafik zu sehen ist, inklusive Einheiten&#46;"
      }
    },
    "data": {
      "title": "Daten",
      "type": "array",
      "Q:type": "table",
      "Q:options": {
        "allowTranspose": true
      },
      "items": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "minItems": 1
    },
    "allowDownloadData": {
      "title": "Daten zum Herunterladen anbieten",
      "type": "boolean",
      "default": false
    },
    "icons": {
      "title": "Icons (Bitte beim Ressort Visuals bestellen)",
      "type": "array",
      "Q:options": {
        "expandable": true
      },
      "items": {
        "title": "Icon",
        "type": "object",
        "properties": {
          "file": {
            "type": "object",
            "Q:type": "files",
            "Q:options": {
              "maxFiles": 1,
              "acceptedFiles": "image/png,image/svg+xml",
              "fileProperties": {
                "url": "url",
                "key": "key",
                "size": "size",
                "width": "width",
                "height": "height",
                "type": "type"
              }
            }
          }
        }
      }
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Link",
                "type": "string",
                "Q:options": {
                  "placeholder": "Direktlink zur Quelle, http://..."
                }
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "options": {
      "type": "object",
      "properties": {
        "hideLegend": {
          "title": "Legende ausblenden",
          "type": "boolean",
          "default": false
        },
        "iconsOneRow": {
          "title": "Unterschiedliche Icons nebeneinander anzeigen",
          "type": "boolean",
          "default": false
        },
        "highlightColumn": {
          "title": "Hervorhebung",
          "oneOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "Q:options": {
            "dynamicEnum": {
              "type": "ToolEndpoint",
              "config": {
                "endpoint": "dynamic-enum/highlightColumn",
                "fields": ["options", "data"]
              }
            },
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/highlightColumn",
                  "fields": ["options", "data"]
                }
              }
            ]
          }
        }
      }
    }
  },
  "required": ["title"]
}
